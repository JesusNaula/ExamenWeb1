<h1>Crear Pizza</h1>

<form action="/Pizza/crearPizza" method="post">


  <div class="form-group row">
    <label for="nombrePizza" class="col-2 col-form-label">Nombre Pizza</label>
    <div class="col-10">
      <input class="form-control"
             type="text"
             placeholder="Ingrese Nombre Pizza"
             id="nombrePizza"
             name="nombrePizza"

      >
    </div>
  </div>

  <div class="form-group row">
    <label for="ingredientes" class="col-2 col-form-label">Ingredientes</label>
    <div class="col-10">
      <input class="form-control" type="text"
             placeholder="Ingrese ingredientes"
             name="ingredientes"
             id="ingredientes">
    </div>
  </div>

  <div class="form-group row">
    <label for="precio" class="col-2 col-form-label">Precio</label>
    <div class="col-10">
      <input class="form-control" type="text" placeholder="Ingrese precio" id="precio"
             name="precio">
    </div>
  </div>

  <div class="form-group row">
    <label for="imagenPizza" class="col-2 col-form-label">Imagen Pizza</label>
    <div class="col-10">
      <input class="form-control" type="text" placeholder="Ingrese precio" id="imagenPizza"
             name="imagenPizza">
    </div>
  </div>






  <button
    class="btn btn-outline-success">Crear Pizza</button>



</form>
